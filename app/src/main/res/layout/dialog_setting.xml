<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minWidth="280dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_popup_title"
        android:gravity="center"
        android:padding="8dp"
        android:text="CÀI ĐẶT"
        android:textColor="@color/text_search"/>

    <LinearLayout
        android:id="@+id/bt_bg_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_bg_color"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="32dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="Màu hình nền"
            android:textColor="@color/colorPrimary"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bt_text_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_text_color"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="32dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="Màu chữ"
            android:textColor="@color/colorPrimary"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginTop="24dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_size"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="24dp"
            android:background="@drawable/bg_text_size"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="@color/colorPrimary"
            android:textSize="28dp"
            tool:text="22"/>

        <FrameLayout
            android:id="@+id/bt_minus"
            android:layout_width="48dp"
            android:layout_height="24dp"
            android:layout_marginLeft="12dp"
            android:background="@color/colorPrimary"
            android:includeFontPadding="false"
            android:textColor="@android:color/white"
            android:textSize="22dp">

            <View
                android:layout_gravity="center"
                android:layout_width="12dp"
                android:layout_height="1dp"
                android:background="@android:color/white"/>
        </FrameLayout>

        <TextView
            android:id="@+id/bt_plus"
            android:layout_width="48dp"
            android:layout_height="24dp"
            android:layout_marginLeft="5dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="+"
            android:textColor="@android:color/white"
            android:textSize="22dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/bt_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:padding="8dp"
        android:text="Xong"
        android:textColor="@android:color/white"
        android:textSize="@dimen/font_default"/>
</LinearLayout>